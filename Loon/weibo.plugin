#!name = 微博去广告
#!desc = 微博去广告
#!icon = https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Weibo.png

[MITM]
hostname = api.weibo.*, *.api.weibo.*, mapi.weibo.*, *.uve.weibo.com, new.vip.weibo.cn, boot.biz.weibo.com

[Rewrite]
# > 微博_每日一次的开屏广告请求@ddgksf2013
^https?:\/\/boot.*weibo\.com\/v\d\/ad\/realtime url reject-200

# > 微博_去除底部超话栏表层浮icon及tips@ddgksf2013
^https?:\/\/api\.weibo\.cn\/\d\/!\/huati\/discovery_home_bottom_getdotinfo url reject-dict

# > 微博_屏蔽首页左上角每日的弹窗tips@ddgksf2013
^https?:\/\/m?api\.weibo\.c(n|om)\/\d/push/daily url reject-dict

# > 微博_应用内弹窗广告@ddgksf2013
^https?:\/\/(preload-click|preload-impression)\.uve\.weibo\.com\/(interface\/wbpullad\/wbpullad_click\.php|wbapplua\/get_wbpullad_log\.lua) url reject

# > 微博_屏蔽sdkconfig请求@ddgksf2013
^https?:\/\/sdkapp\.uve\.weibo\.com\/interface\/sdk\/sdkconfig\.php url reject

# > 微博_Spotlight@ddgksf2013
^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/hot\/hours_spotlight url reject-dict

[Script]
# > 微博_未登陆状态下首页信息流处理@ddgksf2013
^https?:\/\/api\.weibo\.cn\/\d\/\w{5}\/(statuses_unread_hot_timeline|timeline) url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 未登陆状态下首页信息流处理

# > 微博_视频信息处理@ddgksf2013
^https?:\/\/api\.weibo\.cn\/\d\/video\/tiny_stream_mid_detail url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 视频信息处理

# > 微博_屏蔽发现页面搜索框热词@ddgksf2013
^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/\w{5}\/cardlist url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 屏蔽发现页面搜索框热词

# > 微博_自定义tab皮肤@zmqcherish
^https://api.weibo.cn/2/!/client/light_skin url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 自定义tab皮肤

# > 微博_非会员设置tab皮肤@zmqcherish
^https://new.vip.weibo.cn/littleskin/preview url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 非会员设置tab皮肤

# > 微博_去广告以及去除各部分推广模块@zmqcherish,@ddgksf2013
^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/(searchall|page\?|messageflow) url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 去广告以及去除各部分推广模块
^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/statuses/(unread_)?friends(/|_)timeline url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 去广告以及去除各部分推广模块
^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/groups/timeline url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 去广告以及去除各部分推广模块
^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/statuses/(container_timeline|unread_hot_timeline|extend|video_mixtimeline|unread_topic_timeline) url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 去广告以及去除各部分推广模块
^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/profile/(me|container_timeline) url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 去广告以及去除各部分推广模块
^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/video/(community_tab|remind_info|tiny_stream_video_list) url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 去广告以及去除各部分推广模块
^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/search/(finder|container_timeline|container_discover) url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 去广告以及去除各部分推广模块
^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/(checkin/show|\!/live/media_homelist|comments/build_comments|container/get_item) url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 去广告以及去除各部分推广模块
^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/cardlist url script-path = https://github.com/ddgksf2013/Scripts/raw/master/weibo_json.js, requires-body = true, tag = 去广告以及去除各部分推广模块
